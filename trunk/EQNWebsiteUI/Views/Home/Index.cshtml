            {
                ViewData["Widget"] = widget;
                Html.RenderPartial("Widgets/" + widget.widgetType, ViewData);
            }
        }
    </ul>
</div>*@

@section scripts {
<script>
    $('#TopLayerCanvas').SmokeyCanvas({
        particleCount: 0
    });
    $('.NewsFeed').NewsFeed();
    $('.NewsFeedWrapper').Borderize();
</script>
}